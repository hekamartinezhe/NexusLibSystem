<Window x:Class="NexusLibrarySystem.Views.AddEditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit User"
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Border Margin="20" Background="{StaticResource SurfaceBrush}" Padding="20" CornerRadius="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="User Details" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"
                           Foreground="{StaticResource PrimaryBrush}"/>

                <Label Content="Full Name" Style="{StaticResource StyledLabel}" />
                <TextBox x:Name="TxtFullName" Style="{StaticResource RoundedTextBox}" />

                <Label Content="Role" Style="{StaticResource StyledLabel}" />
                <ComboBox x:Name="RoleComboBox" Style="{StaticResource RoundedComboBox}" SelectionChanged="RoleComboBox_SelectionChanged"/>

                <Label Content="Enrollment Number" Style="{StaticResource StyledLabel}" />
                <TextBox x:Name="TxtEnrollment" Style="{StaticResource RoundedTextBox}" />

                <Label Content="Password" Style="{StaticResource StyledLabel}" />
                <PasswordBox x:Name="PwdBox" Style="{StaticResource RoundedPasswordBox}" />

                <Label Content="Quadrimester" Style="{StaticResource StyledLabel}" x:Name="LblQuadrimester" Visibility="Collapsed"/>
                <TextBox x:Name="TxtQuadrimester" Style="{StaticResource RoundedTextBox}" Visibility="Collapsed"/>

                <Label Content="Major" Style="{StaticResource StyledLabel}" />
                <ComboBox x:Name="MajorComboBox" Style="{StaticResource RoundedComboBox}" DisplayMemberPath="MajorName" SelectedValuePath="MajorId"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Cancel"
                            Style="{StaticResource CancelButtonStyle}"
                            Margin="0,0,10,0"
                            Width="80"
                            Click="Cancel_Click"/>
                    <Button Content="Save"
                            Style="{StaticResource MaterialButton}"
                            Width="80"
                            Click="Save_Click"/>
                </StackPanel>

                <TextBlock x:Name="LblError"
                           Foreground="Red"
                           FontSize="12"
                           TextWrapping="Wrap"
                           Margin="0,10,0,0"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
