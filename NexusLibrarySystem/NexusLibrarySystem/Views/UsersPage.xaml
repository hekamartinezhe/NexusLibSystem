<Page x:Class="NexusLibrarySystem.Views.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:NexusLibrarySystem.Views"
      Title="Users Page">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Refresh Users" Style="{StaticResource MaterialButton}"
                Width="120"
                Height="30"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                Click="RefreshUsers_Click"/>

        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="8"
                Padding="5"
                BorderBrush="{StaticResource PrimaryBrush}"
                BorderThickness="1">

            <DataGrid x:Name="UsersDataGrid"
                      Style="{StaticResource DataGridStandardStyle}">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader"
                           BasedOn="{StaticResource StandardDataGridHeaderStyle}" />
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="50"/>
                    <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="150"/>
                    <DataGridTextColumn Header="Enrollment Number" Binding="{Binding EnrollmentNum}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
