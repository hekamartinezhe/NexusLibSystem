<Page x:Class="NexusLibrarySystem.Views.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Users Page">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10" Grid.Row="0" >
            <Button Content="Add User" Style="{StaticResource MaterialButton}" Width="100" Margin="0,0,10,0" Click="AddUser_Click"/>
            <Button Content="Edit User" Style="{StaticResource MaterialButton}" Width="100" Margin="0,0,10,0" Click="EditUser_Click"/>
            <Button Content="Delete User" Style="{StaticResource MaterialButton}" Width="100" Margin="0,0,10,0" Click="DeleteUser_Click"/>
            <Button Content="Activate User" Style="{StaticResource MaterialButton}" Width="120" Margin="0,0,10,0" Click="ActivateUser_Click"/>
            <Button Content="Deactivate User" Style="{StaticResource MaterialButton}" Width="130" Margin="0,0,10,0" Click="DeactivateUser_Click"/>

            <Button Content="Loans" Style="{StaticResource MaterialButton}" Width="120" Click="ViewLoans_Click"/>
            <Button Content="Refresh" Style="{StaticResource MaterialButton}" Width="100" Click="RefreshUsers_Click"/>
        </StackPanel>

        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="8"
                Padding="5"
                BorderBrush="{StaticResource PrimaryBrush}"
                BorderThickness="1">

            <DataGrid x:Name="UsersDataGrid"
                      Style="{StaticResource DataGridStandardStyle}"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      CanUserAddRows="False">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader"
                           BasedOn="{StaticResource StandardDataGridHeaderStyle}" />
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="50" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="150"/>
                    <DataGridTextColumn Header="Enrollment Number" Binding="{Binding EnrollmentNum}" Width="150"/>
                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
            
        </Border>
    </Grid>
</Page>
