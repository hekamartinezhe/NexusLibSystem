<Page x:Class="NexusLibrarySystem.Views.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:NexusLibrarySystem.Views"
      Title="Users Page">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Refresh Users"
                Width="120"
                Height="30"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                Click="RefreshUsers_Click"/>

        <DataGrid x:Name="UsersDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0,10,0,0">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding Id}"
                                    Width="50" />
                <DataGridTextColumn Header="Full Name"
                                    Binding="{Binding FullName}"
                                    Width="*" />
                <DataGridTextColumn Header="Role"
                                    Binding="{Binding Role}"
                                    Width="150" />
                <DataGridTextColumn Header="Enrollment Number"
                                    Binding="{Binding EnrollmentNumber}"
                                    Width="150" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>




  