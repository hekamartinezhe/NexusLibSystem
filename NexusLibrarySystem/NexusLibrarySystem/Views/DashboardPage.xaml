<Page x:Class="NexusLibrarySystem.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Dashboard"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   Margin="0 0 0 20"/>

        <!-- Cards -->
        <UniformGrid Grid.Row="1" Columns="3" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 10 0 0">
            <!-- Books -->
            <Border Background="{StaticResource CardBackgroundBrush}" Padding="16" Margin="8" CornerRadius="8" BorderBrush="Gray" BorderThickness="1">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Registered Books" FontWeight="Bold" FontSize="16" Margin="0 0 0 8" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtTotalBooks" Text="0" FontSize="28" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Users (admin only) -->
            <Border x:Name="borderUsers" Background="{StaticResource CardBackgroundBrush}" Padding="16" Margin="8" CornerRadius="8" BorderBrush="Gray" BorderThickness="1">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Active Users" FontWeight="Bold" FontSize="16" Margin="0 0 0 8" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtTotalUsers" Text="0" FontSize="28" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Loans -->
            <Border Background="{StaticResource CardBackgroundBrush}" Padding="16" Margin="8" CornerRadius="8" BorderBrush="Gray" BorderThickness="1">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Current Loans" FontWeight="Bold" FontSize="16" Margin="0 0 0 8" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtActiveLoans" Text="0" FontSize="28" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </UniformGrid>
    </Grid>
</Page>

