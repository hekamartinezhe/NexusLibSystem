<Page x:Class="NexusLibrarySystem.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="DashboardPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Reportes del Sistema"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{StaticResource PrimaryBrush}"
                   Margin="0 0 0 20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,20" Grid.Row="1">
            <Button Content="Libros disponibles"
                    Style="{StaticResource MaterialButton}"
                    Margin="0,0,10,0"
                    Click="LoadAvailableBooksReport_Click"/>

            <Button Content="Más prestados"
                    Style="{StaticResource MaterialButton}"
                    Margin="0,0,10,0"
                    Click="LoadMostBorrowedBooksReport_Click"/>

            <Button Content="Usuarios frecuentes"
                    Style="{StaticResource MaterialButton}"
                    Click="LoadFrequentUsersReport_Click"/>
        </StackPanel>

        <DataGrid x:Name="ReportDataGrid"
                  Grid.Row="2"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Style="{StaticResource DataGridStandardStyle}"/>
    </Grid>
</Page>
