<Window x:Class="NexusLibrarySystem.Views.LoansManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Préstamos"
        Height="450" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TxtUserInfo" FontSize="16" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

        <DataGrid x:Name="LoansDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single"
                  Style="{StaticResource DataGridStandardStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Préstamo" Binding="{Binding LoanId}" Width="70" IsReadOnly="True"/>
                <DataGridTextColumn Header="Libro" Binding="{Binding BookTitle}" Width="*"/>
                <DataGridTextColumn Header="Fecha Préstamo" Binding="{Binding LoanDate, StringFormat=d}" Width="110"/>
                <DataGridTextColumn Header="Fecha Vencimiento" Binding="{Binding DueDate, StringFormat=d}" Width="110"/>
                <DataGridTextColumn Header="Fecha Devolución" Binding="{Binding ReturnDate, StringFormat=d}" Width="110"/>
                <DataGridTextColumn Header="Estado" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Multa" Binding="{Binding FineAmount, StringFormat=C}" Width="80"/>
                <DataGridCheckBoxColumn Header="Renovado" Binding="{Binding Renewed}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Marcar como devuelto" Width="150" Margin="0,0,10,0" Click="ReturnBook_Click"/>
            <Button Content="Renovar préstamo" Width="130" Margin="0,0,10,0" Click="RenewLoan_Click"/>
            <Button Content="Cerrar" Width="100" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
