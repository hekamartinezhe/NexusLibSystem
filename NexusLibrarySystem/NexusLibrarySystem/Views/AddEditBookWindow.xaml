<Window x:Class="NexusLibrarySystem.Views.AddEditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Form"
        Height="650"
        Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock x:Name="TitleLabel"
                   Text="Add/Edit Book"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="{StaticResource OnBackgroundBrush}"/>

        <!-- Formulario -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Category" Foreground="{StaticResource OnBackgroundBrush}" Margin="0,0,0,5"/>
            <ComboBox x:Name="CategoryComboBox"
                      Style="{StaticResource RoundedComboBox}"
                      Height="35"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      Margin="0,0,0,10"/>

            <TextBlock Text="Title" Foreground="{StaticResource OnBackgroundBrush}" Margin="0,5,0,0"/>
            <TextBox x:Name="TitleBox" Style="{StaticResource RoundedTextBox}" />

            <TextBlock Text="Author" Foreground="{StaticResource OnBackgroundBrush}" Margin="0,10,0,0"/>
            <TextBox x:Name="AuthorBox" Style="{StaticResource RoundedTextBox}" />

            <TextBlock Text="Publisher" Foreground="{StaticResource OnBackgroundBrush}" Margin="0,10,0,0"/>
            <TextBox x:Name="PublisherBox" Style="{StaticResource RoundedTextBox}" />

            <TextBlock Text="Publication Year" Foreground="{StaticResource OnBackgroundBrush}" Margin="0,10,0,0"/>
            <TextBox x:Name="YearBox" Style="{StaticResource RoundedTextBox}" />

            <TextBlock Text="ISBN" Foreground="{StaticResource OnBackgroundBrush}" Margin="0,10,0,0"/>
            <TextBox x:Name="ISBNBox" Style="{StaticResource RoundedTextBox}" />

            <TextBlock Text="Inventory" Foreground="{StaticResource OnBackgroundBrush}" Margin="0,10,0,0"/>
            <TextBox x:Name="InventoryBox" Style="{StaticResource RoundedTextBox}" />
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Width="90"
                    Margin="0,0,10,0"
                    Click="Cancel_Click"
                    Style="{StaticResource MaterialButton}"/>

            <Button x:Name="SaveButton"
                    Content="Save"
                    Width="90"
                    Click="Save_Click"
                    Style="{StaticResource MaterialButton}"/>
        </StackPanel>
    </Grid>
</Window>
